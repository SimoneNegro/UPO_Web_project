<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:ital,wght@0,100..700;1,100..700&display=swap"
    rel="stylesheet">
<!-- MAIN CONTAINER -->
<div class="log-container">
    <!-- TITLE -->
    <h1 class="log-title">Forgot password</h1>
    <!-- FORM -->
    <form class="log-form" id="forgot-password" action="/forgot-password" method="post">
        <!-- EMAIL FIELD -->
        <section class="margin-b">
            <label class="bold" for="email">E-mail</label>
            <input id="email" name="email" type="text" autocomplete="email" placeholder="Type your e-mail" required>
        </section>
        <!-- FORGOT PASSWORD BUTTON -->
        <button class="log-button font" type="submit">Send link</button>
    </form>
</div>
<a href="/login">Login</a>

<script src="https://code.jquery.com/jquery-3.7.0.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.js"></script>
