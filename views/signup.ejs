<link rel="stylesheet" href="/style/style.css">
<script src="/js/functions.js"></script>

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto+Mono:ital,wght@0,100..700;1,100..700&display=swap" rel="stylesheet">
<!-- MAIN CONTAINER -->
<div class="log-container">
    <!-- TITLE -->
    <h1 class="log-title">Sign up</h1>
    <!-- FORM -->
    <form class="log-form" action="/signup" method="post">
        <!-- EMAIL FIELD -->
        <section class="margin-b">
            <label class="bold" for="email">E-mail</label>
            <input id="email" name="email" type="email" autocomplete="email" placeholder="Type your e-mail" required>
        </section>
        <!-- PASSWORD FIELD -->
        <section class="margin-b">
            <label class="bold" for="new-password">Password</label>
            <div class="password-input-container">
                <input id="new-password" name="password" type="password" placeholder="Type your password" autocomplete="new-password" required>
                <button class="font" type="button" id="show-password-toggle" onclick="togglePasswordVisibility(1)">Show</button>
            </div>
        </section>
        <!-- FORGOT PASSWORD -->
        <section class="forgot-password-section">
            <a class="forgot-password remove-link-color" href="/forgot">Forgot password?</a>
        </section>
        <!-- SIGN UP BUTTON -->
        <button class="log-button font" type="submit">Sign up</button>
    </form>
    <!-- SIGN IN -->
    <section class="log-section">
        <a class="signup-link remove-link-color" href="/login">Already registered? Log in.</a>
    </section>
</div>