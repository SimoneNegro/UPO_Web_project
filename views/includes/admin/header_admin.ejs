<header class="header">
    <nav
            class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom border-dark-subtle shadow mb-5 sticky-top light-bg">
        <div class="container">
            <% if(title == "Admin panel" ) { %>
                <a class="navbar-brand static-link"><!-- inserisci img logo -->Admin panel</a>
            <% } else { %>
                <a class="navbar-brand link" href="/admin"><!-- inserisci img logo -->Admin panel</a>
            <% } %>
            <!-- BUTTON SHOW SMALL SCREEN -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- ALL PAGES LINK -->
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between"
                 id="navbarNavAltMarkup">
                <!-- MAIN PAGES -->
                <div class="d-sm-inline-flex gap-4">
                    <% if(title == "Update User" ) { %>
                        <a class="static-link">Update user</a>
                    <% } else { %>
                        <a class="link" href="/update-user">Update user</a>
                    <% } %>
                    <% if(title == "Update Frequent Questions" ) { %>
                        <a class="static-link">Update frequent questions</a>
                    <% } else { %>
                        <a class="link" href="/update-frequent-question">Update frequent questions</a>
                    <% } %>
                    <% if(title == "Update Community Comment Visibility" ) { %>
                        <a class="static-link">Update community visibility</a>
                    <% } else { %>
                        <a class="link" href="/update-community-comment-visibility">Update community visibility</a>
                    <% } %>
                    <a class="nav-link link" href="/">Home user</a>
                    <a class="nav-link link" href="/staff">Home staff</a>
                </div>
                <!-- LOG PAGES -->
                <div class="d-sm-inline-flex gap-4">
                    <% if (!user) { %>
                        <a class="nav-link link" href="/signup">Register</a>
                        <a class="nav-link link" href="/login">Login</a>
                    <% } else { %>
                        <% if(title == "Dashboard" ) { %>
                            <a class="nav-link static-link">Welcome <%= user.email %></a>
                        <% } else { %>
                            <a class="nav-link link" href="/user-dashboard">Welcome <%= user.email %></a>
                        <% } %>
                        <form action="/logout" method="post">
                            <button class="nav-link link">Log out</button>
                        </form>
                    <% } %>
                </div>
            </div>
        </div>
    </nav>
</header>