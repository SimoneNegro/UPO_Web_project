<header class="header">
    <nav
            class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom border-dark-subtle shadow mb-5 sticky-top light-bg">
        <div class="container">
            <% if(title == "NGR" ) { %>
                <!-- <img class="logo-size" src="/style/images/logo.jpg"
                     alt="Website logo"> -->
                <a class="navbar-brand static-link">NGR</a>
            <% } else { %>
                    <!-- <img class="logo-size" src="/style/images/logo.jpg"
                        alt="Website logo"> -->
                <a class="navbar-brand link" href="/">NGR</a>
            <% } %>
            <!-- BUTTON SHOW SMALL SCREEN -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <!-- ALL PAGES LINK -->
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between"
                 id="navbarNavAltMarkup">
                <!-- MAIN PAGES -->
                <div class="d-sm-inline-flex gap-4">
                    <% if(title == "Open a ticket" ) { %>
                        <a class="nav-link static-link">Open ticket</a>
                    <% } else { %>
                        <a class="nav-link link" href="/open-ticket">Open ticket</a>
                    <% } %>
                    <% if(title == "My Tickets" ) { %>
                        <a class="nav-link static-link">My tickets</a>
                    <% } else { %>
                        <a class="nav-link link" href="/my-tickets">My tickets</a>
                    <% } %>
                    <% if(title == "Closed Tickets" ) { %>
                        <a class="nav-link static-link">Closed tickets</a>
                    <% } else { %>
                        <a class="nav-link link" href="/closed-tickets">Closed tickets</a>
                    <% } %>
                    <% if(user) { %>
                        <p>Sono admin</p>
                    <% } %>
                </div>
                <!-- LOG PAGES -->
                <div class="d-sm-inline-flex gap-4">
                    <% if (!user) { %>
                        <a class="nav-link link" href="/signup">Register</a>
                        <a class="nav-link link" href="/login">Login</a>
                    <% } else { %>
                        <form action="/logout" method="post">
                            <button class="nav-link link">Log out</button>
                        </form>
                    <% } %>
                </div>
            </div>
        </div>
    </nav>
</header>