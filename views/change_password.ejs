<link rel="stylesheet" href="/style/style.css">

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link
        href="https://fonts.googleapis.com/css2?family=GFS+Didot&family=Roboto+Flex:opsz,wght@8..144,100..1000&display=swap"
        rel="stylesheet">

<body class="log-background">
<!-- MAIN CONTAINER -->
<div class="log-container">
    <!-- TITLE -->
    <h1 class="title margin-bottom">Change password</h1>
    <!-- FORM -->
    <form class="log-form" id="change-password" action="/change-password" method="post">
        <input id="user_id" name="user_id" type="hidden" value="<%= user_id %>">
        <!-- PASSWORD FIELD -->
        <section class="margin-b">
            <label class="bold" for="new-password">Password</label>
            <div class="password-input-container">
                <input id="new-password" name="password" type="password" placeholder="Type your password"
                       autocomplete="new-password" required>
                <button class="font show-password-toggle" type="button" id="show-new-password-toggle"
                        onclick="togglePasswordVisibility(this)">Show
                </button>
            </div>
            <span id="new-password-error"></span>
        </section>
        <!-- CONFIRM PASSWORD FIELD -->
        <section class="margin-b">
            <label class="bold" for="confirm-new-password">Confirm password</label>
            <div class="password-input-container">
                <input id="confirm-new-password" name="confirm_password" type="password"
                       placeholder="Confirm your password" autocomplete="confirm-new-password" required>
                <button class="font show-password-toggle" type="button" id="show-confirm-password-toggle"
                        onclick="togglePasswordVisibility(this)">Show
                </button>
            </div>
            <span id="confirm-new-password-error"></span>
        </section>
        <!-- SIGN UP BUTTON -->
        <button class="log-button font" type="submit">Confirm password</button>
    </form>
</div>
</body>

<script src="https://code.jquery.com/jquery-3.7.0.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.js"></script>
<script src="/js/functions.js"></script>
<script src="/js/change_password_validation.js"></script>